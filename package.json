{
	"name": "p5-snippets-and-tools",
	"displayName": "P5 Snippets and Tools",
	"description": "An extension for development with p5.js",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.65.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:p5-snippets-and-tools.create-p5-project-standard",
		"onLanguage:javascript"
	],
	"main": "./out/extension.js",
	"capabilities": {
		"hoverProvider": "true"
	},
	"contributes": {
		"commands": [
			{
				"command": "p5-snippets-and-tools.create-p5-project-standard",
				"title": "Create a standard p5.js project"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "^14.18.12",
		"@types/vscode": "^1.65.0",
		"@typescript-eslint/eslint-plugin": "^5.12.1",
		"@typescript-eslint/parser": "^5.12.1",
		"@vscode/test-electron": "^2.1.2",
		"eslint": "^8.9.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.1",
		"path": "^0.12.7",
		"typescript": "^4.5.5"
	}
}
